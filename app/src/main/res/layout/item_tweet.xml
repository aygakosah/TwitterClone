<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile_1"
        app:riv_corner_radius="25dp"
        app:riv_oval="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/draw_head"
                android:textStyle="bold"
                android:text="Gideon"
                android:layout_margin="2.5dp"
                android:textSize="15sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_toEndOf="@id/tvUsername"
                android:text="aygakosah"
                android:textColor="@color/draw_description"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dotSep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:textAlignment="center"
                android:layout_margin="2.5dp"
                android:textSize="15sp"
                android:textColor="@color/draw_description"
                android:layout_toEndOf="@id/tvHandle"/>

            <TextView
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30m"
                android:layout_margin="2.5dp"
                android:textSize="15sp"
                android:textColor="@color/draw_description"
                android:layout_toEndOf="@id/dotSep"/>

            <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/dropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{ion_chevron_down}"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:textColor="@color/draw_description"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTweetBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="2.5dp"
            android:textColor="@color/draw_head"
            android:text="Hey ! How you doin' ?"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"/>
    </LinearLayout>


    </LinearLayout>
